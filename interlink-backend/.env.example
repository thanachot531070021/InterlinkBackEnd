# Database
DATABASE_URL="postgresql://username:password@localhost:5432/interlink"

# JWT Secrets
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-change-in-production"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# App Configuration
NODE_ENV="development"
PORT=3001
APP_NAME="Interlink Backend"
APP_VERSION="1.0.0"

# Email Configuration (OTP & Notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="no-reply@interlink.com"

# File Storage (S3-compatible)
S3_ENDPOINT="https://s3.amazonaws.com"
S3_BUCKET="interlink-files"
S3_REGION="us-east-1"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"

# External APIs
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5

# Monitoring
SENTRY_DSN="your-sentry-dsn"

# Frontend URLs (for CORS and redirects)
FRONTEND_URL="http://localhost:3000"
ADMIN_URL="http://localhost:3000/admin"
STORE_URL="http://localhost:3000/store"